# RIVET Pro Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Telegram Bot Configuration
# =============================================================================
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string (Neon, Supabase, or local)
DATABASE_URL=postgresql://user:password@host:5432/rivet_pro

# =============================================================================
# AI Provider API Keys
# =============================================================================
# Get these from respective provider dashboards

# Groq (Fast, cheap OCR) - https://console.groq.com
GROQ_API_KEY=your_groq_key_here

# Google AI (Gemini fallback) - https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_key_here

# Anthropic (Claude for orchestrator) - https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI (GPT-4 fallback) - https://platform.openai.com
OPENAI_API_KEY=your_openai_key_here

# =============================================================================
# LLM Orchestrator Configuration
# =============================================================================
# Which model/provider to use for adaptive responses
ORCHESTRATOR_MODEL=claude-3-5-sonnet-20241022
ORCHESTRATOR_PROVIDER=anthropic

# =============================================================================
# Redis Configuration (Optional)
# =============================================================================
# For caching and session management
# REDIS_URL=redis://localhost:6379

# =============================================================================
# Storage Configuration (Optional)
# =============================================================================
# For PDF/manual storage (AWS S3, Cloudflare R2, etc.)
# S3_BUCKET=rivet-pro-manuals
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_ENDPOINT=

# =============================================================================
# Observability (Optional)
# =============================================================================
# LangSmith tracing - https://smith.langchain.com
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your_langsmith_key
# LANGCHAIN_PROJECT=rivet-pro

# =============================================================================
# Feature Flags
# =============================================================================
# Beta mode: Unlock all features for all users during testing
BETA_MODE=true

# =============================================================================
# Application Settings
# =============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
