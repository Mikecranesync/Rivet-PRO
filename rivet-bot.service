[Unit]
Description=Rivet Telegram Bot
After=network.target postgresql.service

[Service]
Type=simple
User=root
WorkingDirectory=/opt/Rivet-PRO
Environment="PATH=/opt/Rivet-PRO/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/opt/Rivet-PRO/venv/bin/python -m rivet_pro.adapters.telegram
Restart=always
RestartSec=10
StandardOutput=append:/var/log/rivet/bot.log
StandardError=append:/var/log/rivet/bot_error.log

[Install]
WantedBy=multi-user.target
